{
  "name": "aiva-backend",
  "version": "1.0.0",
  "description": "AIVA Backend API using Azure services",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "init-db": "ts-node src/scripts/init-database.ts",
    "test-auth": "ts-node src/scripts/test-auth.ts",
    "test-api": "ts-node src/scripts/test-api.ts",
    "test-login": "ts-node src/scripts/simple-login-test.ts",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@azure/app-configuration": "^1.9.0",
    "@azure/identity": "^4.0.1",
    "@azure/msal-node": "^2.6.4",
    "@azure/openai": "^1.0.0-beta.12",
    "@azure/storage-blob": "^12.17.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^10.0.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.21.0",
    "readline-sync": "^1.4.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mssql": "^9.1.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
